{
  "name": "sites-enhancer",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    { "matches": ["https://sites.google.com/*"],
      "js": ["content.js"]
    }],
  "commands": {
    "apply-format-code": {
      "suggested_key": { "default": "Alt+Shift+C" },
      "description": "Apply Code formatting"
    }
  }
}
